{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:nodeJs",
    ":pinAllExceptPeerDependencies",
    "schedule:monthly"
  ],
  "npm": {
    "stabilityDays": 3
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
